{
  "name": "story-maker",
  "version": "0.1.0",
  "homepage": "https://raicuparta.github.io/story-maker",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.13",
    "@types/node": "12.0.2",
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "@types/styled-components": "^4.1.15",
    "@types/wouter": "^2.0.1",
    "firebase": "^6.0.4",
    "polished": "^3.4.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "reactfire": "^2.0.0-canary.fc2be5b",
    "styled-components": "^5.0.0-beta.8",
    "typescript": "^3.5.3",
    "wouter": "^2.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "yarn lint",
    "react-test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "lint": "eslint --ext js,ts,tsx src",
    "lint:fix": "eslint --fix --ext js,ts,tsx src",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "standard"
    ],
    "rules": {
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none"
          }
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.2.0-beta.18",
    "@storybook/addon-links": "^5.2.0-beta.18",
    "@storybook/addons": "^5.2.0-beta.18",
    "@storybook/react": "^5.2.0-beta.18",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "gh-pages": "^2.0.1",
    "pre-commit": "^1.2.2"
  }
}
